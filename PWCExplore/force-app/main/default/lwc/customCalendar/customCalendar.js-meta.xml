<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>57.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Custom Calendar</masterLabel>
    <description>Custom Calendar For PJP and Visits</description>
    <targets>
        <target>lightning__RecordPage</target>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__Tab</target>
    </targets>

    <!-- Configuring the design attributes -->
    <targetConfigs>
        <targetConfig targets="lightning__HomePage,lightning__RecordPage,lightning__AppPage">
        <!-- A static picklist for design attributes -->
        <property name="pageType" type="String" default="Home" label="Select the Page Type" datasource="Home,Details,TeamView"/>
        
    </targetConfig>
</targetConfigs>
</LightningComponentBundle>